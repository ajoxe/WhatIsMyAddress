<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyc.c4q.whatismyaddress.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter Email Address"
        />
    <!--found inputType on android developers site https://developer.android.com/training/keyboard-input/style.html -->

    <Button
        android:id="@+id/button_save_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setSaveEmailButton"
        android:text="@string/save_email_button"/>
    <Button
        android:id="@+id/button_recycler_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setRecyclerIntentButton"
        android:text="@string/recycler_activity_button"/>

</LinearLayout>
